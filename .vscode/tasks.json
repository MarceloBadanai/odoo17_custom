    "version": "2.0.0",
    "tasks": [
        {
            "label": "stop",
            "command": "/bin/bash",
            "type": "process",
            "args": [
                "stop.sh",
            ],
            "options": {
              "cwd": "/usr/lib/python3/dist-packages/odoo"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "update",
            "command": "/bin/bash",
            "type": "process",
            "dependsOn" : ["stop"],
            "args": [
                "update.sh",
            ],
            "options": {
              "cwd": "/usr/lib/python3/dist-packages/odoo"
            },
            "problemMatcher": "$msCompile"
        },
    ]
}