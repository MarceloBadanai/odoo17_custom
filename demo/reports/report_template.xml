<odoo>
    <data>
        <template id="device_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as= "doc">

                    <t t-call="web.external_layout">
                        <div>
                            <div class="page">
                                <h2>Device(s)</h2>

                                <div id="information" class="row mt-4 mb-4">
                                    <div class="col-auto col-3">
                                        <strong>Nome:</strong>
                                        <p class="m-0" t-field="doc.nome"></p>
                                    </div>
                                    <div class="col-auto col-3">
                                        <strong>IP:</strong>
                                        <p class="m-0" t-field="doc.ip"></p>
                                    </div>
                                </div>

                                <h3>Fornecedore(s):</h3>

                                <table class="table table-sm table-borderless">
                                    <thead>
                                        <tr>
                                            <th class="text-start">Nome</th>
                                            <th class="text-end">Cidade</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="text-start">
                                                <span >Fornecedor 1</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-end">
                                                <span>Teresina</span>
                                            </td>
                                        </tr>
                                    </tbody>

                                    <!--
                                    <tbody>
                                        <t t-foreach="vendorIds" t-as= "vendor">
                                            <tr>
                                                <td>
                                                    <span class="m-0" t-field="vendor.nome"></span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span class="m-0" t-field="vendor.cidade"></span>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                    -->
                                </table>

                            </div>
                        </div>
                    </t>

                </t>
            </t>
        </template>
    </data>
</odoo>